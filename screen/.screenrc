#hardstatus on
#hardstatus alwayslastline
#hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y}"

# dont clear screen after command is executed
altscreen on

# cleaner shell title
shelltitle ''

# Never, ever turn this off.
autodetach on

# scroll history
defscrollback 10000

# activate scroll
termcapinfo xterm* ti@:te@

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
#termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# erase background with current bg color
defbce "on" 

defutf8 on

# ------------------------------------------------------------------------------
# SCREEN KEYBINDINGS
# ------------------------------------------------------------------------------

#unbindall
#escape ^Jj

# Remove some stupid / dangerous key bindings
bind ^k
#bind L
bind ^\
# Make them better
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history

# create new window
#bindkey ^N screen

# control + left; previous screen window
bindkey ^[[1;5D prev
# control + right; next screen window
bindkey ^[[1;5C next
# control + up; previous split screen
bindkey ^[[1;5A focus prev
# control + down; next split screen
bindkey ^[[1;5B focus next

# set TERM
#term screen-256color-bce
#term screen-256color
#term xterm-256color
term rxvt-256color
